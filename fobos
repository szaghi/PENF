#templates
[template-base]
mod_dir         = ./mod/
obj_dir         = ./obj/
src             = ./src/
colors          = True
quiet           = False
log             = True
jobs            = 4
cflags_heritage = True

[template-static-pgi]
template     = template-base
compiler     = pgi
cflags       = -c -O3
exclude_dirs = $EXDIRS

[template-shared-gnu]
template = template-base
compiler = gnu
cflags   = $CSHARED_GNU $OPTIMIZE
lflags   = $LSHARED $OPTIMIZE
preproc  = -D_ASCII_SUPPORTED -D_UCS4_SUPPORTED -D_R16P

[template-static-gnu]
template = template-base
compiler = gnu
cflags   = $CSTATIC_GNU $OPTIMIZE
lflags   = $OPTIMIZE
preproc  = -D_ASCII_SUPPORTED -D_UCS4_SUPPORTED -D_R16P

[template-shared-gnu-debug]
template = template-base
compiler = gnu
cflags   = $CSHARED_GNU $DEBUG_GNU
lflags   = $LSHARED $DEBUG_GNU
preproc  = -D_ASCII_SUPPORTED -D_UCS4_SUPPORTED -D_R16P

[template-static-gnu-debug]
template = template-base
compiler = gnu
cflags   = $CSTATIC_GNU $DEBUG_GNU
lflags   = $DEBUG_GNU
preproc  = -D_ASCII_SUPPORTED -D_UCS4_SUPPORTED -D_R16P

[template-shared-intel]
